@inherits FluxorComponent
@page "/submit"

<div id="submit-container">
    <h3>Write your own joke ✏️</h3>
    <EditForm class="std-form" Model="JokeModel" OnSubmit="HandleSubmit" FormName="Joke1">
        <TextAreaInput class="std-input" @bind-Value="JokeModel!.Content" />
        <button id="submit-button" class="std-button-fill" type="submit" disabled=@(!MaySubmit())>submit</button>
    </EditForm>
</div>